<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="#f5f5f5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/monty"
        android:layout_above="@+id/activity_bill_setting"
        android:textColor="#B39DDB"
        android:layout_marginBottom="50dp"
        android:text="Bill Settings Details"/>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bill_setting"
    android:layout_width="match_parent"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content"
    android:background="@drawable/bg2"
    android:paddingBottom="100dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="50dp"
    android:elevation="10dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:orientation="vertical"
    tools:context="com.vansh.resellerprofit.activity.BillSetting">



    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:textSize="14dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/monty"
        android:textStyle="bold"
        android:text="Product ID: " />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/product_i"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:fontFamily="@font/monty"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/selectt"
            android:elevation="4dp"
            android:textSize="14dp"
            android:fontFamily="@font/monty"
           android:textAllCaps="false"
            android:background="@drawable/btnbg"
            android:text="select"/>

    </LinearLayout>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_gravity="center"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="VAT %"
            app:met_hideUnderline="true"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            app:met_textColor="@color/white"
            android:id="@+id/vat"
            app:met_floatingLabelTextColor="@color/white"
            android:fontFamily="@font/monty"
            android:textSize="14dp"
            android:textStyle="bold"
            android:hint="Enter VAT%"
            android:inputType="numberDecimal"
            android:layout_weight="0.70"/>



        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_gravity="center"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Customer Name"
            app:met_hideUnderline="true"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            app:met_textColor="@color/white"
            android:fontFamily="@font/monty"
            android:textStyle="bold"

            android:id="@+id/custname"
            android:textSize="14dp"
            android:inputType="textCapWords"
            android:hint="Enter Name"
            android:layout_weight="0.70"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_gravity="center"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Customer Email id"
            app:met_hideUnderline="true"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/custemail"
            android:textSize="14dp"
            app:met_textColor="@color/white"
            android:fontFamily="@font/monty"
            android:textStyle="bold"
            android:hint="Enter Email ID"
            android:layout_weight="0.70"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_gravity="center"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Payment Method"
            app:met_hideUnderline="true"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"

            android:id="@+id/paymethod"
            app:met_textColor="@color/white"
            android:fontFamily="@font/monty"
            android:textStyle="bold"
            android:textSize="14dp"
            android:hint="Enter Method"
            android:inputType="textCapWords"
            android:layout_weight="0.70"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_gravity="center"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Mobile Number"
            app:met_hideUnderline="true"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"

            android:id="@+id/custmob"
            app:met_textColor="@color/white"
            android:fontFamily="@font/monty"
            android:textStyle="bold"
            android:textSize="14dp"
            android:inputType="number"
            android:hint="Enter Number"
            android:layout_weight="0.70"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/imei"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_weight="0.70"
            app:met_hideUnderline="true"
            android:layout_height="50dp"

            android:fontFamily="@font/monty"
            android:hint="Enter IMEI"
            android:inputType="number"
            app:met_textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="IMEI" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Scan"
            android:id="@+id/imeiscan"
            android:textAllCaps="false"
            android:elevation="4dp"
            android:fontFamily="@font/monty"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:shadowDx="4"


            android:background="@drawable/btnbg"
            android:shadowDy="4"
            android:shadowRadius="3" />

    </LinearLayout>






</LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:elevation="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/activity_bill_setting"
        android:layout_marginRight="70dp"
        android:layout_marginTop="-60dp"
        android:gravity="center"
        android:background="@drawable/background">
        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="40dp"
            android:elevation="4dp"
            android:id="@+id/sub"
            android:fontFamily="@font/monty"
            android:textAllCaps="false"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="14dp"

            android:background="@drawable/btnbg"
            android:text="Create Bill"/>

    </LinearLayout>
</RelativeLayout>