<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_company_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context="com.vansh.resellerprofit.activity.CompanyProfile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/monty"
        android:layout_above="@+id/activity_bill_setting"
        android:textColor="#B39DDB"
        android:layout_marginBottom="50dp"
        android:text="Company Profile"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg2"

        android:layout_marginTop="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="6dp"
        android:elevation="18dp"
        android:orientation="vertical">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_gravity="center"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Company Name"
            app:met_hideUnderline="true"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:textSize="14dp"
            app:met_textColor="@color/white"
            android:fontFamily="@font/monty"
            android:textStyle="bold"
            android:id="@+id/companyname"
            android:inputType="textCapWords"
            android:hint="Enter company name"
            android:layout_weight="0.70"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_gravity="center"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Company Address"
            app:met_hideUnderline="true"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:textSize="14dp"
            app:met_textColor="@color/white"
            android:fontFamily="@font/monty"
            android:textStyle="bold"
            android:id="@+id/comaddress"

            android:inputType="textCapWords"
            android:hint="Enter address"
            android:layout_weight="0.70"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_gravity="center"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="VAT TIN"
            app:met_hideUnderline="true"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:textSize="14dp"
            app:met_textColor="@color/white"
            android:fontFamily="@font/monty"
            android:textStyle="bold"

            android:id="@+id/vattin"

            android:inputType="numberDecimal"
            android:hint="Enter VAT TIN"
            android:layout_weight="0.70"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_gravity="center"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="CST"
            app:met_hideUnderline="true"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:textSize="14dp"
            app:met_textColor="@color/white"
            android:fontFamily="@font/monty"
            android:textStyle="bold"
            android:id="@+id/csttin"
            android:hint="Enter CST"
            android:layout_weight="0.70"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Company Logo"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="14dp"
        android:elevation="4dp"
        android:textAllCaps="false"
        android:fontFamily="@font/monty"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/btnbg"
        android:id="@+id/addimage"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:elevation="6dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/complogo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:elevation="20dp"
        android:layout_marginTop="150dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/background">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="14dp"
            android:textAllCaps="false"
            android:fontFamily="@font/monty"
            android:elevation="4dp"
            android:background="@drawable/btnbg"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/comsave"
            />

    </LinearLayout>


</RelativeLayout>
